#:kivy 1.11.1
#:import rgba kivy.utils.rgba

<DesignElements>:
    
    FloatLayout:
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: rgba('#0a5e00')
            Rectangle:
                size: self.size

        Carousel:
            direction: "right"
            loop: 'True'
            id: crsMain

            FloatLayout:
                size: root.width, root.height

                Image:
                    source: 'Resources/OfficialLogo.png'
                    pos_hint: {'x':.1, 'top':1}
                    size_hint:(.8,.4)
                    allow_stretch: 'True'

                Image:
                    source: 'Resources/questionmark.png'
                    pos_hint: {'x':.1, 'center_y':.3}
                    size_hint:(.8,.35)
                    allow_stretch: 'True'
                    id: imGroup

                Button:
                    pos_hint: {'x':.1, 'center_y':.3}
                    size_hint:(.8,.35)
                    background_normal:'' 
                    background_color : rgba(0,0,0,0)
                    id: btnNextGroup

                Label:
                    text: "Welcome!"
                    font_size: '20sp'
                    pos_hint: {'x':.1, 'bottom':1}
                    size_hint:(.8,.2)
                    id: lblNews

            FloatLayout:
                size: root.width, root.height
                FloatLayout:
                    pos_hint: {'x':.08, 'y':.075}
                    size_hint: (.925,.875)
                    canvas.before:
                        Color:
                            rgba: rgba('#000000')
                        Rectangle:
                            size: self.size
                            pos: self.pos

                Label:
                    text: "Rules"
                    pos_hint: {"center_y":.97,"center_x":.5}
                    size_hint_x: .8
                    size_hint_y: .1
                    font_size: '40sp'

                Image:
                    source: "Resources/OfficialLogo.png"
                    pos_hint: {"center_y":.96,"x":.1}
                    size_hint: (.1,.08)
                    allow_stretch: 'True'
                    kee_ratio: 'False'

                Image:
                    source: "Resources/OfficialLogo.png"
                    pos_hint: {"center_y":.96,"x":.8}
                    size_hint: (.1,.08)
                    allow_stretch: 'True'
                    kee_ratio: 'False'

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    size_hint_x: .8
                    size_hint_y: .9
                    pos_hint: {"center_y":.5,"center_x":.5}

                    GridLayout:
                        id: layRules
                        cols: 1
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: 10
                        padding: 10

            FloatLayout:
                size: root.width, root.height

                Label:
                    text: "Einstellungen"
                    font_size: '20sp'
                    pos_hint: {"center_y": .95,"center_x": 0.5}
                    size_hint: (.5,.2)

                GridLayout:
                    cols: 2
                    pos_hint: {"x":0,"top":.9}
                    size_hint:(1,.1)
                
                    Button:
                        text: "Set Filepath"
                        id: btnSetFilepath
                        background_normal: ""
                        background_color: rgba('#0F0F0F')

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "currently no path"
                            id:lblFilePath

                    Button:
                        text: "Refresh members.json"
                        id: btnRefreshMembers
                        background_normal: ""
                        background_color: rgba('#0F0F0F')

                    Label:
                        text: "currently 0 members detected"
                        id:lblMembersCount
            
