#:kivy 1.11.1
#:import rgba kivy.utils.rgba

<DesignElements>:
    
    FloatLayout:
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: rgba('#0a5e00')
            Rectangle:
                size: self.size

        Carousel:
            direction: "right"
            loop: 'True'
            id: crsMain

            Carousel:
                direction: "bottom"
                loop: 'True'
                id: crsMembers

                Label:
                    id: lblMembers
                    text: "Members"

   
            Image:
                source: 'Resources/OfficialLogo.png'
                size: self.texture_size

            BoxLayout:
                orientation: 'horizontal'
                
                Button:
                    text: "Set Filepath"
                    id: btnSetFilepath

                Label:
                    text: "currently no path"
                    id:lblFilePath
            
