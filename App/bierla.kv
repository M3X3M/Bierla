#:kivy 1.11.1
#:import rgba kivy.utils.rgba

<DesignElements>:
    
    FloatLayout:
        size: root.width, root.height

        canvas.before:
            Color:
                rgba: rgba('#0a5e00')
            Rectangle:
                size: self.size

        Carousel:
            direction: "right"
            loop: 'True'
            id: crsMain

            Carousel:
                direction: "bottom"
                loop: 'True'
                id: crsMembers

                Label:
                    id: lblMembers
                    text: "Richtige Lappen"
                    font_size: '50dp'

            FloatLayout:
                size: root.width, root.height

                Image:
                    source: 'Resources/OfficialLogo.png'
                    pos_hint: {'x':.1, 'top':1}
                    size_hint:(.8,.8)
                    allow_stretch: 'True'

                Label:
                    text: "Willkommen in der BIERLA App V3"
                    font_size: '50dp'
                    pos_hint: {'x':.1, 'bottom':1}
                    size_hint:(.8,.2)

            FloatLayout:
                size: root.width, root.height

                GridLayout:
                    cols: 2
                    pos_hint: {"x":0,"top":.9}
                    size_hint:(1,.1)

                    canvas.after:
                        Color:
                            rgba: rgba('#ffffff')
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                
                    Button:
                        text: "Set Filepath"
                        id: btnSetFilepath
                        background_normal: ""
                        background_color: rgba('#0a5e00')

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            markup: True
                            text: "[b]current path:[/b]"
                            font_size: "20dp"

                        Label:
                            text: "currently no path"
                            id:lblFilePath
            
